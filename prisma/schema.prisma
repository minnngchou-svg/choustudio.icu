// Prisma Schema for 设计师个人网站
// 数据库: 开发可用 PostgreSQL (Neon) 或 MySQL；生产部署推荐 MySQL（如阿里云服务器）

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==================== 用户模型 ====================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?  @db.VarChar(100)
  avatar    String?  @db.Text
  bio       String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  works     Work[]
}

// ==================== 文章模型 ====================
model Post {
  id          String     @id @default(cuid())
  title       String     @db.VarChar(255)
  slug        String     @unique @db.VarChar(255)
  content     Json       // Plate 编辑器 JSON 内容
  excerpt     String?    @db.Text
  coverImage  String?    @db.Text
  status      PostStatus @default(DRAFT)
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id])
  tags        Tag[]
  authorId    String
  author      User       @relation(fields: [authorId], references: [id])
  sortOrder   Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  publishedAt DateTime?

  @@index([status])
  @@index([categoryId])
  @@index([authorId])
}

// ==================== 作品模型 ====================
enum WorkType {
  DESIGN      // 设计作品
  DEVELOPMENT // 开发作品
}

model Work {
  id             String        @id @default(cuid())
  title          String        @db.VarChar(255)
  slug           String        @unique @db.VarChar(255)
  workType       WorkType      @default(DESIGN) // 设计作品 / 开发作品
  description    String?       @db.Text
  content        Json?         // 详细描述（Plate JSON）
  coverImage     String        @db.Text
  images         Json          // 详情图数组，存储为 JSON
  currentVersion String?       @db.VarChar(20)  // 当前最新版本号
  price          Decimal?      @db.Decimal(10, 2)
  isFree         Boolean       @default(false)
  figmaUrl       String?       @db.Text // Figma 文件链接（前台嵌入预览 + 购买后跳转）
  deliveryUrl    String?       @db.Text // 自定义交付链接（GitHub / 网盘等，购买后可复制）
  fileUrl        String?       @db.Text
  fileName       String?       @db.VarChar(255)
  demoUrl        String?       @db.Text // 在线体验链接（开发作品）
  demoQrCode     String?       @db.Text // 扫码体验二维码 data URL（开发作品）
  status         WorkStatus    @default(DRAFT)
  categoryId     String?
  category       Category?     @relation(fields: [categoryId], references: [id])
  authorId       String
  author         User          @relation(fields: [authorId], references: [id])
  tags           Tag[]
  orders         Order[]
  versions       WorkVersion[]
  sortOrder      Int           @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([status])
  @@index([workType])
  @@index([categoryId])
  @@index([authorId])
}

// ==================== 作品版本模型 ====================
model WorkVersion {
  id        String   @id @default(cuid())
  workId    String
  work      Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  version   String   @db.VarChar(20) // "1.0", "2.0" 等
  price     Decimal  @db.Decimal(10, 2)
  changelog   String?  @db.Text        // 更新说明
  figmaUrl    String?  @db.Text        // Figma 文件链接
  deliveryUrl String?  @db.Text        // 自定义交付链接（GitHub / 网盘等）
  fileUrl     String?  @db.Text
  fileName    String?  @db.VarChar(255)
  createdAt DateTime @default(now())

  orders    Order[]

  @@unique([workId, version])
  @@index([workId])
}

// ==================== 订单模型 ====================
model Order {
  id            String       @id @default(cuid())
  orderNo       String       @unique @db.VarChar(64)
  workId        String
  work          Work         @relation(fields: [workId], references: [id])
  versionId     String?
  version       WorkVersion? @relation(fields: [versionId], references: [id])
  upgradeFromId String?      @db.VarChar(64) // 升级来源版本 ID
  amount        Decimal      @db.Decimal(10, 2)
  status        OrderStatus  @default(PENDING)
  buyerEmail    String       @db.VarChar(255)
  buyerName     String?      @db.VarChar(100)
  paymentId     String?      @db.VarChar(64) // 微信支付订单号
  paidAt        DateTime?
  downloadToken String?      @unique @db.VarChar(64)
  downloadCount Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([status])
  @@index([workId])
  @@index([versionId])
  @@index([buyerEmail])
}

// ==================== 分类模型 ====================
model Category {
  id        String          @id @default(cuid())
  name      String          @db.VarChar(100)
  slug      String          @unique @db.VarChar(100)
  type      CategoryType
  posts     Post[]
  works     Work[]
  tutorials VideoTutorial[]
}

// ==================== 标签模型 ====================
model Tag {
  id        String          @id @default(cuid())
  name      String          @unique @db.VarChar(50)
  posts     Post[]
  works     Work[]
  tutorials VideoTutorial[]
}

// ==================== 媒体文件模型 ====================
// 归属类型：文章 / 设计作品 / 开发作品 / 视频教程
model Media {
  id         String   @id @default(cuid())
  name       String   @db.VarChar(255)
  url        String   @db.Text
  type       String   @db.VarChar(50) // image, video, file
  size       Int
  width      Int?
  height     Int?
  entityType String   @db.VarChar(50) // POST | WORK_DESIGN | WORK_DEVELOPMENT | TUTORIAL
  entityId   String   @db.VarChar(64) // Post.id / Work.id / VideoTutorial.id
  createdAt  DateTime @default(now())

  @@index([type])
  @@index([entityType])
  @@index([entityType, entityId])
}

// ==================== 网站设置模型 ====================
model Settings {
  id            String  @id @default("settings")
  siteName      String  @default("Fan's Studio") @db.VarChar(255)
  avatar        String? @db.Text
  socialLinks   Json?   // { wechat, xiaohongshu, officialAccount, bilibili, figma, youshe, x, github }
  about         Json?   // 关于页内容
  nav           Json?   // { logoText, works, blog, about, tutorials } 导航品牌与名称
  pageCopy      Json?   // 各页页头介绍与首页 Hero 文案
  theme         Json?   // { base: "neutral", accent: "fanmihua" } 主题配置
  footer        Json?   // { copyrightText: "范米花儿", version: "0.1.0" } 页脚版权与版本
  updatedAt     DateTime @updatedAt
}

// ==================== 视频教程模型 ====================
model VideoTutorial {
  id          String    @id @default(cuid())
  title       String    @db.VarChar(255)
  slug        String    @unique @db.VarChar(255)
  description String?   @db.Text
  videoUrl    String    @db.Text   // 视频链接（B 站、YouTube 等）
  thumbnail   String?   @db.Text
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  tags        Tag[]
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([categoryId])
}

// ==================== 枚举类型 ====================
enum PostStatus {
  DRAFT
  PUBLISHED
}

enum WorkStatus {
  DRAFT
  PUBLISHED
}

enum OrderStatus {
  PENDING    // 待支付
  PAID       // 已支付（数字商品自动交付）
  CANCELLED  // 已取消
  REFUNDED   // 已退款
}

enum CategoryType {
  POST
  WORK
  DESIGN
  DEVELOPMENT
  TUTORIAL
}
